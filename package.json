{
  "name": "crud-clientes-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:backend": "npm --workspace backend run dev",
    "build": "npm --workspace frontend run build",
    "start": "npm --workspace backend run start",
    "test": "npm-run-all test:*",
    "test:backend": "npm --workspace backend run test",
    "test:frontend": "npm --workspace frontend run test",
    "test:watch": "npm-run-all --parallel test:*:watch",
    "test:backend:watch": "npm --workspace backend run test:watch",
    "test:frontend:watch": "npm --workspace frontend run test:watch"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
